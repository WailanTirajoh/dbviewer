  <style>
    /* Column sorting styles */
    .sortable-column {
      cursor: pointer;
      position: relative;
      transition: background-color 0.2s ease;
      background-color: inherit;
    }
    
    .sortable-column:hover {
      background-color: #f5f5f5;
    }
    
    .sortable-column.sorted {
      background-color: #f0f0f0;
    }
    
    .sortable-column .column-sort-link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      height: 100%;
      padding: 4px 0;
    }
    
    .sortable-column .column-name {
      flex: 1;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    
    .sortable-column .sort-icon-container {
      flex: 0 0 auto;
      width: 20px;
      text-align: center;
      margin-left: 4px;
    }
    
    .sortable-column .sort-icon {
      font-size: 0.8em;
      opacity: 0.7;
      transition: opacity 0.2s ease, color 0.2s ease;
    }
    
    .sortable-column:hover .sort-icon.invisible {
      visibility: visible !important;
      opacity: 0.3;
    }

