    overflow: auto;
    height: calc(100vh - 125px);
    padding: 20px;
    position: relative;
  }
  
  .mermaid {
    display: flex;
    justify-content: center;
    min-width: 100%;
  }
  
  /* Loading state styling */
  #erd-loading {
    background-color: var(--bs-body-bg);
  }
  
  #erd-loading .text-center p {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  #erd-loading .text-center small {
    font-size: 0.875rem;
  }
  
  /* Error state styling */
  #erd-error {
    max-width: 600px;
    margin: 2rem auto;
  }
  
  #erd-error h5 {
    color: var(--bs-danger);
    margin-bottom: 0.75rem;
  }
  
  #erd-error-details {
    font-size: 0.8rem;
    max-height: 150px;
    overflow-y: auto;
  }
  
  /* SVG Pan Zoom styles */
  .svg-pan-zoom_viewport {
    transition: 0.2s;
  }
  
  /* Make sure SVG maintains its size */
  #erd-container svg {
    width: 100%;
    height: auto;
    display: block;
    min-width: 800px;
    min-height: 600px;
  }
  
