  [data-bs-theme="dark"] .mermaid .er .attributeBoxOdd {
    fill: #374151 !important;
  }
  
  [data-bs-theme="dark"] .mermaid text {
    fill: #f8f9fa !important;
  }
  
  /* Loading indicator dark mode */
