  }
  
  [data-bs-theme="dark"] .mermaid .er .relationshipLine {
    stroke: #6ea8fe !important;
    stroke-width: 2px !important;
  }
  
  [data-bs-theme="dark"] .mermaid .er .relationshipLabel {
    fill: #f8f9fa !important;
    color: #f8f9fa !important;
  }
  
